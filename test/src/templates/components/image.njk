{% set image_width = image_width if image_width else "660" %}
{% set image_height = image_height if image_height else "330" %}
{% set image_url = image_url if image_url else "https://via.placeholder.com/" + image_width*2 + "x" + image_height*2 %}
{% set image_alt = image_alt if image_alt else base.company_name %}

<!-- Image -->
<table border="0" cellpadding="0" cellspacing="0" role="none" width="100%">
    <tr>
        <td align="center">
            <table border="0" cellpadding="0" cellspacing="0" role="none" style="width:660px;" class="w100pc">
                <tr>
                    <td style="padding-bottom:20px;">
                        <img src="{{image_url}}" alt="{{image_alt}}" width="{{image_width}}" class="fill">
                    </td>
                </tr>
            </table>
        </td>
    </tr>
</table>